<div>
    <h4> SECCION PARA ELIMINAR UN PRODUCTO</h4>

    <div class="hGroup">
        <h4> Bienvenido {{info.dataLoginUser.first_name}}</h4>
        <h4> You are an: {{info.dataLoginUser.role}}</h4>
    </div>
    
<div id="productContainer">
    {{#each info.arrayProd}}
        <div class="boxProduct">
            <div class="product">
                <ul>
                    
                    <li> <strong>Id:</strong> {{_id}} </li>
                    <li> Title: {{title}} </li>
                    <li> Description: {{description}} </li>
                    <li> Owner: {{owner}} </li>
                    <li> Price: {{price}} </li>
                    <li> Code: {{code}} </li>
                    <li> Status: {{status}} </li>
                    <li> Category: {{category}} </li>
                    <li> Stock: {{stock}} </li>
                    <li> Thumbnail: {{thumbnail}} </li>
                    
                </ul>
            </div>
            <div>
                <button onclick="handleProd(`{{_id}}`)"><b>Eliminar de la Base de datos</b></button>
            </div>
        </div>
    {{/each}}
</div>
<script src="/js/modifyProdDB.js"></script>